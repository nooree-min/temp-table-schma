{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": ["package.json"] // some rules conflict with syncpack
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noCommonJs": "error",
        "useImportRestrictions": "off"
      },
      "correctness": {
        "noUndeclaredDependencies": "error",
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noConsoleLog": "error"
      },
      "complexity": {
        "useLiteralKeys": "off",
        // FIXME: Change to "error" once all cognitive complexity issues are resolved
        "noExcessiveCognitiveComplexity": "warn"
      }
    },
    "ignore": []
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    },
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
